<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RootNamespace>PBEM00_FlashTool</RootNamespace>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <Title>PBEM00 ofp Flash Script</Title>
    <Description>A program to flash PBEM00 device more easier
Made by MalNEW aka. Malware_MEZM</Description>
    <Copyright>MalNEW aka. Malware_MEZM</Copyright>
    <PackageProjectUrl>https://github.com/MalNEW/PBEM00-ofpFlashScript</PackageProjectUrl>
    <RepositoryUrl>https://github.com/MalNEW/PBEM00-ofpFlashScript</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Command.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="bin\Debug\net8.0-windows\license">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NuGet.CommandLine" Version="6.10.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Redpoint.ThirdParty.System.CommandLine" Version="2024.1177.305" />
    <PackageReference Include="YamlDotNet" Version="15.3.0" />
  </ItemGroup>

</Project>
